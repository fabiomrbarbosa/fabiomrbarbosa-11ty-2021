{% set pageTitle = renderData.title or title %}
{% set pageDescription = renderData.description
  or description
  or 'dict.site.subtitle' | i18n %}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>
  {% if pageTitle %}
    {{ pageTitle }} |
  {% endif %}
  {{ metadata.title }}
</title>

<meta name="description" content="{{ pageDescription }}">
{# <meta name="image" content={{socialImage}} /> #}

{# OpenGraph tags #}
<meta
  property="og:url"
  content="https://fabiobarbosa.net{{ page.url }}"
/>
<meta property="og:type" content="article" />
<meta property="og:title" content={{ pageTitle }} />
<meta property="og:description" content={{ pageDescription }} />
{# <meta property="og:image" content={{socialImage}} /> #}

{# Twitter Card tags #}
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@fabiomrbarbosa" />
<meta name="twitter:creator" content="@fabiomrbarbosa" />

{# Assets #}
{% set css %}
  {% include "inlines/styles/main.min.css" | url %}
{% endset %}
<style>{{ css | safe }}</style>

<link rel="icon" href="/assets/images/favicon.svg">
<link rel="mask-icon" href="/assets/images/favicon.svg" color="#000" />
<link rel="mask-icon" href="/assets/images/favicon.svg" color="#fff" media="(prefers-color-scheme: dark)" />

<link rel="preload" as="font" type="font/woff2"
  href="/assets/fonts/TiemposText-Semibold.woff2" crossorigin>

{# RSS Feed #}
<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
