---
permalink: /{{ locale }}/tags/
layout: layouts/base.njk
translationKey: tags
---

{% Heading {
  title: 'Tags'
} %}

{% GridList {
  className: 'tags--archive'
} %}

{% for tag in collections.tagList %}
  {% set tagUrl %}/{{ locale }}/tags/{{ tag }}/{% endset %}
  <a href="{{ tagUrl }}" class="tag">{{ tag }}</a>
{% endfor %}

{% endGridList %}

