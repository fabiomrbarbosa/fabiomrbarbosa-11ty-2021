---
layout: layouts/base.njk
templateClass: tmpl-home
permalink: /{{ subDir }}
---
{% import "components/macros.njk" as macro %}

{{ macro.heading (
  title = dictionary.home.welcome[ locale ],
  subtitle = dictionary.home.title[ locale ],
  image = 'heading_home_20201208.png',
  className = 'heading--home'
) }}

{% call macro.gridlist (
  title = dictionary.home.contacts[ locale ],
  className = 'contacts'
) %}

  {%- include "partials/contact.njk" -%}

{% endcall %}

{% call macro.gridlist (
  title = dictionary.postlist.title[ locale ],
  linkText = dictionary.postlist.link[ locale ],
  linkTarget = '/' + subDir + 'blog/',
  className = 'feed'
) %}

  {% set postlist = collections["posts_" + locale] | head(-3) %}
  {%- include "partials/postlist.njk" -%}

{% endcall %}

{%- include "partials/subscribe.njk" -%}
