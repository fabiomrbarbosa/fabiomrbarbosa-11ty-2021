---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts_en
    - posts_pt
    - site_en
    - site_pt
    - tagList
  addAllPagesToCollections: true
layout: layouts/base.njk
eleventyComputed:
  title: 'Tag: {{ tag }}'
permalink: /{{ subDir }}tags/{{ tag | slug }}/
templateClass: tmpl-archive
translationKey: tags
---
{% import "components/macros.njk" as macro %}

{{ macro.heading (
  title = title,
  className = 'heading--archive'
) }}

{% call macro.gridlist (
  linkText = dictionary.tag.link[ locale ],
  linkTarget = '/' + subDir + 'tags/',
  className = 'feed'
) %}

  {% set postlist = collections[ tag ] %}
  {%- include "partials/postlist.njk" -%}

{% endcall %}

{%- include "partials/subscribe.njk" -%}
