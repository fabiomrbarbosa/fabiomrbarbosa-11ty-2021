---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts_en
    - posts_pt
    - site_en
    - site_pt
    - tagList
  addAllPagesToCollections: true
layout: layouts/base.njk
eleventyComputed:
  title: 'Tag: {{ tag }}'
permalink: /{{ subDir }}tags/{{ tag | slug }}/
templateClass: tmpl-archive
translationKey: tags
---
{% Heading {
  title: title,
  className: 'heading--archive'
} %}

{% ArchiveList {
  linkText: dictionary.tag.link[ locale ],
  linkTarget: '/' + subDir + 'tags/',
  className: 'feed'
} %}

  {% set postlist = collections[ tag ] %}
  {%- include "partials/postlist.njk" -%}

{% endArchiveList %}

{%- include "partials/subscribe.njk" -%}
