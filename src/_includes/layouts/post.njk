---
layout: layouts/base.njk
templateClass: tmpl-post
permalink: /{{ subDir }}{{ category }}/{{ page.fileSlug }}/
---

{%- from "components/init.njk" import component -%}
{{ component('heading', {
  title: title,
  lede: description,
  date: date,
  tags: tags,
  imageSrc: coverImage.src,
  imageAlt: coverImage.alt,
  imageCaption: coverImage.caption,
  imageAttribution: coverImage.attribution,
  className: "heading--post",
  readingTime: dictionary.post.readingtime[ locale ] + content | timeToRead(locale),
  locale: locale
}) }}

<div class="entry-body block">
  <div class="entry-content post-content">
    {{ content | safe }}
  </div>
</div>

